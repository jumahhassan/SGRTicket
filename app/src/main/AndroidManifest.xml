<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sgr_train">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/train"
        android:label="@string/app_name"
        android:roundIcon="@drawable/train"
        android:supportsRtl="true"
        android:theme="@style/Theme.SGRTrain"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.AllTickets"></activity>
        <activity android:name=".activities.Signup_Activity" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.SGRTrain.NoActionBar" />
        <activity
            android:name=".activities.Login_Activity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SGRTrain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>